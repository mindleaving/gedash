<Window x:Class="CentralMonitorGUI.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:wpf="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        mc:Ignorable="d"
        x:Name="Self"
        DataContext="{Binding ElementName=Self, Path=ViewModel}"
        Title="Central Monitor" Height="400" Width="1000">
    <Grid>
        <ListView ItemsSource="{Binding Monitors}">

        </ListView>
        <wpf:CartesianChart>
            <wpf:CartesianChart.AxisX>
                <wpf:Axis ShowLabels="False"/>
            </wpf:CartesianChart.AxisX>
            <wpf:CartesianChart.AxisY>
                <wpf:Axis ShowLabels="False"/>
            </wpf:CartesianChart.AxisY>
        </wpf:CartesianChart>
    </Grid>
</Window>
